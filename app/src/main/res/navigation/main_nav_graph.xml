<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainViewPagerFragment">

    <fragment
        android:id="@+id/mainViewPagerFragment"
        android:name="com.nandomiranda.themovies.view.fragments.MainViewPagerFragment"
        android:label="MainViewPagerFragment"
        tools:layout="@layout/fragment_main_view_pager">
        <action
            android:id="@+id/action_mainViewPagerFragment_to_detailFragment2"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.nandomiranda.themovies.view.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movie"
            app:argType="com.nandomiranda.themovies.model.movie.Movie"/>
    </fragment>

</navigation>